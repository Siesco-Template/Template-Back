{
  "Routes": [
    {
      "DownstreamPathTemplate": "/api/{everything}",
      "DownstreamScheme": "http",
      "DownstreamHostAndPorts": [
        {
          "Host": "template-auth-service",
          "Port": 8080
        }
      ],
      "UpstreamPathTemplate": "/auth/{everything}",
      "UpstreamHttpMethod": [ "POST", "GET", "PUT", "DELETE", "PATCH", "OPTIONS" ],
      "SwaggerKey": "Auth Service"
    },
    {
      "DownstreamPathTemplate": "/api/{everything}",
      "DownstreamScheme": "https",
      "DownstreamHostAndPorts": [
        {
          "Host": "template-main-service",
          "Port": 8080
        }
      ],
      "UpstreamPathTemplate": "/template/{everything}",
      "UpstreamHttpMethod": [ "POST", "GET", "PUT", "DELETE", "PATCH", "OPTIONS" ],
      "SwaggerKey": "Main Service"
    },
    {
      "DownstreamPathTemplate": "/api/{everything}",
      "DownstreamScheme": "https",
      "DownstreamHostAndPorts": [
        {
          "Host": "template-permission-service",
          "Port": 8080
        }
      ],
      "UpstreamPathTemplate": "/permission/{everything}",
      "UpstreamHttpMethod": [ "POST", "GET", "PUT", "DELETE", "PATCH", "OPTIONS" ],
      "SwaggerKey": "Permission Service"
    }
  ],
  "GlobalConfiguration": {
    "BaseUrl": "https://template-api.microsol.az"
  }
}